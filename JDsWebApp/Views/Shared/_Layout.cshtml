<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    @*<title>@ViewBag.Title</title>*@  
    <title>JD's</title>  
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top jd-nav-bar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                @*<a href="">*@
                    <div class="jd-big-logo-font">JD</div><div class="jd-small-logo-font">’s</div>
                @*</a>*@

            </div>
            <span id="successfulSaveNotification"></span>

            @Html.ActionLink("Employee Portal", "Index", "EmployeePortalLogin", new { area = "EmployeePortal" }, new { @class = "jd-navbar-item nav-bar-on-right" })
            @Html.ActionLink("All Jobs", "AllJobs", "Home", null, new { @class = "jd-navbar-item nav-bar-on-right" })
            @Html.ActionLink("Current Jobs", "Index", "Home", null, new { @class = "jd-navbar-item nav-bar-on-right" })
            
        </div>
    </div>
    <div id="main-container" class="container">
        @RenderBody()
        
    </div>
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - JD's Babbitt Bearings</p>
    </footer>
    @Scripts.Render("~/bundles/jqueryval")


    @Scripts.Render("~/bundles/kendo")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)

    <script id="successTemplate" type="text/x-kendo-template">
        <div class="upload-success">
            <div class="h5"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>#= message #</div>
        </div>
    </script>

    <script>
        var notification;

        //define stuff for immediate global use
        $(function () {

            notification = $("#successfulSaveNotification").kendoNotification({
                width: 400,
                position: {
                    pinned: true,
                    top: 4
                },
                autoHideAfter: 1500,
                show: onShow,
                stacking: "down",
                templates: [{
                    type: "successful",
                    template: $("#successTemplate").html()
                }]
            }).data("kendoNotification");
        });

    </script>
</body>
</html>
