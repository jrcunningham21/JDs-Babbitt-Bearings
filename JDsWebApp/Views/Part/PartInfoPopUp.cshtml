@using JDsDataModel.ViewModels;
@model JDsDataModel.ViewModels.PartInfoPopupViewModel


<style>
    .k-window-titlebar {
        background-color: #215fa8;
        height: 80px !important;
        text-align: center;
        vertical-align: middle;
        color: white;
        font-weight: 500;
        font-size: 20px;
    }

    .k-i-close {
        display:none;
    }

    div.k-window-content {
        padding: 0;
        border-radius: 0;
        background-color: #F6F6FF;
    }

    /*.k-grid {
        background-color: #DEEBF6;
    }*/

    /*.k-grid .k-alt {
        background-color: #BDD7EE; 
    }*/

    #photosgrid .k-icon {
        display: none;
    }
    
    .partPhotoThumb {
        float: left;
        width: 176px;
        height: 88px;
        margin: 0;
        padding: 5px;
