
@{
    ViewBag.Title = "Delivery";
}

<script>
    function showSignOff() {
        $("#confirmDeleteModal").modal();
    }

</script>

<head>
    <title></title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>

<div class="container-fluid form-container">
    <link rel="stylesheet" href="site.css">

    <!-- Modal -->
    <div class="modal fade" id="enterMeasurementsModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <span class="glyphicon glyphicon-cog"></span>
                    <h4> Enter measurements</h4>
                </div>

                <div class="modal-body" style="padding:40px 50px;">

                    <div class="container-fluid form-container">
                        <form role="form">

                            <div class="row">
                                <div class="key-style col-md-12 " style="text-align:left;">
                                    <label>Note: These values may not be changed once entered</label>
                                </div>
                            </div>

                            <!-- Customer-specified-->
                            <div class="row">
                                <div class="key-style col-md-2 ">
                                    <label>ID:</label>
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="A" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="B" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="C" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <button type="button" class="btn" style="width:100%; margin-top:5px;">Add</button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="key-style col-md-2 ">
                                    <label>OD:</label>
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="A" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="B" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="C" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <button type="button" class="btn" style="width:100%; margin-top:5px;">Add</button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="key-style col-md-2 ">
                                    <label>Width:</label>
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="A" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="B" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <input type="text" class="form-control" placeholder="C" style="width:100%" />
                                </div>
                                <div class="value-style col-md-2">
                                    <button type="button" class="btn" style="width:100%; margin-top:5px;">Add</button>
                                </div>
                            </div>

                            <div class="row" style="margin-top:30px">
                                <button type="submit" class="btn btn-success col-md-offset-2 col-md-5" style="margin-right:20px"><span class="glyphicon glyphicon-off"></span> Submit Measurements</button>
                                <button type="submit" class="btn btn-danger col-md-3" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            </div>

                            <div class="row" style="margin-top:30px">
                                -- for demo --
                            </div>
                            <div class="row">
                                <button type="submit" class="btn btn-sm col-md-offset-2 col-md-5" data-dismiss="modal" style="margin-right:20px" id="withinToleranceBtn"><span class="glyphicon glyphicon-off"></span> Within tolerances</button>
                                <button type="submit" class="btn btn-sm col-md-4" data-dismiss="modal" id="outsideToleranceBtn"><span class="glyphicon glyphicon-remove"></span> Outside tolerances</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="row">

        @Html.Partial("SignOff")
        @Html.Partial("PartHeader")

        <!-- This is the floaty bit on the left --->
        <div class="container-fluid form-container col-md-3" id="partStepBar">
            <div class="partStep completedStep row">
                <div class="col-md-7"><a href="/MockSlingerRing/IncomingInspection" class="partStepLink">Incoming Inspection</a></div>
                <span class="glyphicon glyphicon-ok col-md-2 partStepGlyph completeStepGlyph"></span>
            </div>

            <div class="partStep completedStep row">
                <div class="col-md-7"><a href="/MockSlingerRing/MaterialPreparation" class="partStepLink">Material Preparation</a></div>
                <span class="glyphicon glyphicon-ok col-md-2 partStepGlyph completeStepGlyph"></span>
            </div>

            <div class="partStep completedStep row">
                <div class="col-md-7"><a href="/MockSlingerRing/ManufacturingProcess" class="partStepLink">Manufacturing Process</a></div>
                <span class="glyphicon glyphicon-ok col-md-2 partStepGlyph completeStepGlyph"></span>
            </div>

            <div class="partStep completedStep row">
                <div class="col-md-7"><a href="/MockSlingerRing/FinishBoreProcess" class="partStepLink">Finish Bore Process</a></div>
                <span class="glyphicon glyphicon-ok col-md-2 partStepGlyph completeStepGlyph"></span>
            </div>

            <div class="partStep completedStep row">
                <div class="col-md-7"><a href="/MockSlingerRing/FinalInspection" class="partStepLink">Final Inspection</a></div>
                <span class="glyphicon glyphicon-ok col-md-2 partStepGlyph completeStepGlyph"></span>
            </div>

            <div class="partStep activePartStep row">
                <div class="col-md-7 currentStep">Delivery</div>
                <span class="glyphicon glyphicon-arrow-right col-md-2 partStepGlyph activeStepGlyph" style="margin-top:0px"></span>
            </div>

            <div class="partStep row">
                <div class="col-md-7 incompleteStep">Sign off</div>
            </div>

        </div>

        <div class="container-fluid form-container col-md-9" style="">
            <form>

                <div class="row">
                    <h1 class="col-md-6">Job# 5913 - Slinger Ring</h1>
                    <h3 class="col-md-1" style="text-align:right">
                        <button class="btn" type="button" onclick="showPartDetails()" style="width:55px; margin-top:-10px; background-color:transparent">
                            <span class="glyphicon glyphicon-info-sign  activeStepGlyph"></span>
                            <span class="glyphicon glyphicon-chevron-down  activeStepGlyph"></span>
                        </button>
                    </h3>
                </div>

                

                <!-- Packaged by -->
                <div class="row" style="margin-top:20px">
                    <div class="key-style col-md-4 ">
                        <label>Packaged by:</label>
                    </div>

                    <div class="dropdown col-md-4">
                        <button class="btn btn-primary dropdown-toggle jd-combox-btn" type="button" data-toggle="dropdown">
                            <span class="caret" style="float:right; margin-top:7px;"></span>
                        </button>
                        <ul class="dropdown-menu" style="width:100%;">
                            <li><a href="#">FLORES, ALEX </a></li>
                            <li><a href="#">SHOWDY, SLIM</a></li>
                            <li><a href="#">GIGGS, RYAN</a></li>
                        </ul>
                    </div>
                </div>
                
                <!-- Date required -->
                <div class="row" >
                    <div class="key-style col-md-4 ">
                        <label>Required Date:</label>
                    </div>

                    <div class="dropdown col-md-4">
                        <input type="date" class="form-control" style="width:100%" />
                    </div>
                </div>

                <!-- Date shipped -->
                <div class="row" >
                    <div class="key-style col-md-4 ">
                        <label>Shipped Date:</label>
                    </div>

                    <div class="dropdown col-md-4">
                        <input type="date" class="form-control" style="width:100%" />
                    </div>
                </div>

                <!-- Delivery service -->
                <div class="row" >
                    <div class="key-style col-md-4 ">
                        <label>Shipped Via:</label>
                    </div>

                    <div class="dropdown col-md-4">
                        <input type="text" class="form-control" placeholder="FedEx" style="width:100%" />
                    </div>
                </div>                
                
                <!-- Tracking Number-->
                <div class="row">
                    <div class="key-style col-md-4 ">
                        <label>Tracking number:</label>
                    </div>

                    <div class="dropdown col-md-4">
                        <input type="text" class="form-control" placeholder="9875435907153407" style="width:100%" />
                    </div>
                </div>

                <!-- Packing sheet -->
                <div class="row">
                    <div class="key-style col-md-4 ">
                        <button type="button" class="btn-primary btn" id="printPackingSheetBtn">Print packing sheet</button>
                    </div>
                </div>

                <!-- save / cancel buttons-->
                <div class="row">
                    <div class="col-md-2 col-md-offset-8">
                        <button type="submit" class="btn btn-success" style="width:100%" id="saveBtn">Save</button>
                    </div>
                    <div class="col-md-2">
                        <button id="cancelBtn" type="submit" class="btn btn-danger" style="width:100%">Cancel</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>




<script>
    $(document).ready(function () {

        $("#nonConformanceReport").hide();

        $("#cancelBtn").click(function (e) {
            e.preventDefault();
            window.location.href = '/';
        });

        $("#saveBtn").click(function (e) {
            e.preventDefault();
            window.location.href = '/MockSlingerRing/FinalSignOff';
        });

        $("#printPackingSheetBtn").click(function (e) {
            e.preventDefault();
            window.location.href = '/MockSlingerRing/PackingSheet';
        });

    });

</script>